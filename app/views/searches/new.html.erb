<%= form_for @search, url: search_path, method: :get do |f| %>
  <%= f.label :site_type, "I'm looking for:" %>
  <%= select :search, :site_type, @search.possible_site_types %>

  <%= f.label :amenity_ids, 'I need these accomodations:' %>
  <%= collection_select :search, :amenity_ids, Amenity.all, :id, :name, {}, multiple: true %>

  <%= f.submit 'Submit' %>
<% end %>
